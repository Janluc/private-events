<h1>Log in!</h1>

<%= form_with model: @user, url: '/sign-in', method: :post do |form|%>
<% flash.each do |type, msg| %>
  <div>
    <h3><%= msg %></h3>
  </div>
<% end %>
  


    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>

    <div class="actions">
      <%= form.submit "Log In!"%>
    </div>
  <% end %>